<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos cliente</title>
    <script src="./js/jquery-3.6.0.min.js"></script>
    <script src="./js/btn.js"></script>
    <script src="./js/btnclieli.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="estilos.css">
</head>

<body>
    <div class="container-fluid" action="/usucliente" method="POST">
        <div class="row">
            <div class="col">
                <form class="formulario" action="/insusucli" method="POST">
                    <h1>Registrate clientes</h1>
                    <div class="contenedor">
                        <div class="input-contenedor">
                            <i class="far fa-address-card"></i>
                            <input type="text" name="doccli" placeholder="Documneto">
                        </div>
                        <div class="input-contenedor">
                            <i class="far fa-user"></i>
                            <input type="text" name="nomcli" placeholder="nombre">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-unlock"></i>
                            <input type="text" name="apecli" placeholder="apellido">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-user-tag"></i>
                            <input type="text" name="correocli" placeholder="correo">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-ambulance"></i>
                            <input type="text" name="celular" placeholder="celular">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-ambulance"></i>
                            <input type="text" name="sexo" placeholder="sexo">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-ambulance"></i>
                            <input type="date" name="fechanaccli" placeholder="fecha de nacimiento">
                        </div>
                        <input type="submit" value="Registrate" class="button">
                    </div>
                </form>
                <div>
                    _
                </div>
                <table id="tableArticulos" class="table table-striped table-bordered" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>DOCUMENTO</th>
                            <th>NOMBRE</th>
                            <th>APELLIDO</th>
                            <th>CORREO</th>
                            <th>CELULAR</th>
                            <th>SEXO</th>
                            <th>FECHA DE NACIMIENTO</th>
                            <th>ACTUALIZAR</th>
                            <th>ELIMINAR</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% datos.forEach(function (datos) { %>
                            <tr>
                                <td><input type="text" value="<%= datos.doccli%>" name="doccli" id="doccli"
                                        class="doccli">
                                </td>
                                <td><input type="text" value="<%= datos.nomcli %>" name="nomcli" id="nom" class="usu">
                                </td>
                                <td><input type="text" value="<%= datos.apecli %>" name="apecli" id="ape" class="cla">
                                </td>
                                <td><input type="text" value="<%= datos.correocli %>" name="correocli" id="corr"
                                        class="rol"></td>
                                <td><input type="text" value="<%= datos.celular %>" name="celular" id="cel" class="est">
                                </td>
                                <td><input type="text" value="<%= datos.sexo %>" name="sexo" id="sex" class="sex"></td>
                                <td><input type="text" value="<%= datos.fechanaccli %>" name="fechanaccli" id="fec"
                                        class="fec"></td>
                                <td><input type="submit" value="actualizar" name="btnact" id="btnact" class="btncli">
                                </td>
                                <td><input type="submit" value="Eliminar" name="btneli" id="btneli" class="btnclieli">
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

</body>

</html>