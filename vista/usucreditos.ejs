<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos cliente</title>
    <script src="./js/jquery-3.6.0.min.js"></script>
    <script src="./js/actucredi.js"></script>
    <script src="./js/elicredi.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="estilos.css">
</head>

<body>
    <div class="container-fluid" action="/usucreditos" method="POST">
        <div class="row">
            <div class="col">
                <form class="formulario" action="/insercreditos" method="POST">
                    <h1>Registrate creditos</h1>
                    <div class="contenedor">
                        <div class="input-contenedor">
                            <i class="far fa-address-card"></i>
                            <input type="text" name="codigocredito" placeholder="codigo credito">
                        </div>
                        <div class="input-contenedor">
                            <i class="far fa-user"></i>
                            <input type="text" name="doccli" placeholder="documento cliente">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-unlock"></i>
                            <input type="text" name="codlinea" placeholder="codigo linea">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-user-tag"></i>
                            <input type="text" name="montoprestado" placeholder="monto prestamo">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-user-tag"></i>
                            <input type="date" name="fechaaprobada" placeholder="fecha aprobada">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-user-tag"></i>
                            <input type="text" name="plazo" placeholder="plazo">
                        </div>
                        <input type="submit" value="Registrate" class="button">
                    </div>
                </form>
                <div>
                    _
                </div>
                <table id="tableArticulos" class="table table-striped table-bordered" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>CODIGO CREDITO</th>
                            <th>DOCUMENTO CLIENTE</th>
                            <th>CODIGO LINEA</th>
                            <th>MONTO PRESTAMO</th>
                            <th>FECHA APROBADO</th>
                            <th>PLAZO</th>
                            <th>ACTUALIZAR</th>
                            <th>ELIMINAR</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% datos.forEach(function (datos) { %>
                            <tr>
                                <td><input type="text" value="<%= datos.codigocredito %>" name="codigocredito"
                                        id="codigocredito" class="codigocredito"></td>
                                <td><input type="text" value="<%= datos.doccli %>" name="doccli" id="doccli"
                                        class="doccli"></td>
                                <td><input type="text" value="<%= datos.codlinea %>" name="codlinea" id="codlinea"
                                        class="coslinea"></td>
                                <td><input type="text" value="<%= datos.montoprestado %>" name="mostoprestado"
                                        id="montoprestado" class="montoprestado"></td>
                                <td><input type="text" value="<%= datos.fechaaprobada %>" name="fechaaprobada"
                                        id="fechaaprobada" class="fechaaprobada"></td>
                                <td><input type="text" value="<%= datos.plazo %>" name="plazo" id="plazo" class="plazo">
                                </td>
                                <td><input type="submit" value="actualizar" name="btnact" id="btnact" class="cred">
                                </td>
                                <td><input type="submit" value="Eliminar" name="btneli" id="btneli" class="elimcredi">
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

</body>

</html>