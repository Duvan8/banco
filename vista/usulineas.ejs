<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datos cliente</title>
    <script src="./js/jquery-3.6.0.min.js"></script>
    <script src="./js/actulineas.js"></script>
    <script src="./js/elilin.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="estilos.css">
</head>

<body>
    <div class="container-fluid" action="/usulineas" method="POST">
        <div class="row">
            <div class="col">
                <form class="formulario" action="/inserlineas" method="POST">
                    <h1>Registrate lineas</h1>
                    <div class="contenedor">
                        <div class="input-contenedor">
                            <i class="far fa-address-card"></i>
                            <input type="text" name="codlinea" placeholder="codigo">
                        </div>
                        <div class="input-contenedor">
                            <i class="far fa-user"></i>
                            <input type="text" name="nomlinea" placeholder="nombre">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-unlock"></i>
                            <input type="text" name="montomaxicredito" placeholder="monto maximo">
                        </div>
                        <div class="input-contenedor">
                            <i class="fas fa-user-tag"></i>
                            <input type="text" name="plazomaxcred" placeholder="plazo maximo">
                        </div>
                        <input type="submit" value="Registrate" class="button">
                    </div>
                </form>
                <div>
                    _
                </div>
                <table id="tableArticulos" class="table table-striped table-bordered" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>CODIGO</th>
                            <th>NOMBRE</th>
                            <th>MONTO MAXIMO</th>
                            <th>PLAZO MAXIMO</th>
                            <th>ACTUALIZAR</th>
                            <th>ELIMINAR</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% datos.forEach(function (datos) { %>
                            <tr>
                                <td><input type="text" value="<%= datos.codlinea%>" name="codlinea" id="codlinea"
                                        class="codlinea">
                                </td>
                                <td><input type="text" value="<%= datos.nomlinea %>" name="nomlinea" id="nomlinea"
                                        class="nomlinea">
                                </td>
                                <td><input type="text" value="<%= datos.montomaxicredito %>" name="montomaxicredito"
                                        id="montomaxicredito" class="montomaxicredito">
                                </td>
                                <td><input type="text" value="<%= datos.plazomaxcred %>" name="plazomaxcred"
                                        id="plazomaxcred" class="plazomaxcred">
                                </td>
                                <td><input type="submit" value="actualizar" name="btnact" id="btnact" class="Actu">
                                </td>
                                <td><input type="submit" value="Eliminar" name="btneli" id="btneli" class="btnlineli">
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

</body>

</html>